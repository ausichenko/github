<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/list_item_padding">
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/list_item_user_avatar_size"
        android:layout_height="@dimen/list_item_user_avatar_size" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:layout_marginLeft="@dimen/list_item_user_login_margin"
        android:layout_marginRight="@dimen/list_item_user_login_margin"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/list_item_title_text_size"
        tools:text="ausichenko" />

</RelativeLayout>